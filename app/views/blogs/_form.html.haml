= form_for @blog do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog.errors.count, "error")} prohibited this blog from being saved:"
      %ul
        - @blog.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :author_id
    = f.number_field :author_id
  .actions
    = f.submit 'Save'
