.row
  %p
    = render 'edit_actions', blog: @blog
  .panel.panel-default
    .panel-body
      %h1
        = @blog.title

      .markdown
        = markdown_to_html @blog.body

      %p
        = @blog.status

      %p
        - @blog.tags.each do |tag|
          = link_to tag.name, tag, class: 'btn btn-sm btn-default'

      %p
        Written by
        = link_to @blog.author.nickname, user_path(@blog.author)

  %p
    = render 'edit_actions', blog: @blog
