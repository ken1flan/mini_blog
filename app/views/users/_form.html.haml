= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field.form-group.row
    = f.label :nickname, class: 'col-2 col-form-label'
    .col-10
      = f.text_field :nickname, type: 'text', class: 'form-control'
  .field.form-group.row
    = f.label :icon_url, class: 'col-2 col-form-label'
    .col-10
      = f.text_field :icon_url, class: 'form-control'
  .field.form-group.row
    = f.label :introduction, class: 'col-2 col-form-label'
    .col-10
      = f.text_area :introduction, rows: 5, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
